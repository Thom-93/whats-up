script(src="/javascripts/admin/img-blur.js")
if tweets
  each tweet in tweets
    if tweet.statut === null
      div(class="card tweet-element")
        div(class="card-body d-flex flex-column")
          div(class="d-flex flex-row align-items-center justify-content-between")
            if tweet.author._id.toString() === currentUser._id.toString()
              a(class="link-user-letter" href="/")
                img(width="40" height="40" class="rounded-circle" src=tweet.author.avatar)
            else  
              a(class="link-user-letter" href="/users/" + tweet.author.username) 
                img(width="40" height="40" class="rounded-circle" src=tweet.author.avatar)
            if tweet.author._id.toString() === currentUser._id.toString()
              a(class="link-user-letter" href="/")
                span(class="flex-fill ms-1 fw-bold")= tweet.author.username
            else
              a(class="link-user-letter" href="/users/" + tweet.author.username) 
                span(class="flex-fill ms-1 fw-bold")= tweet.author.username
            if editable
              div(class="validate-btn-container")
                i(class="fa-solid fa-check validate-btn-true" tweetid=tweet._id)
                i(class="fa-solid fa-times validate-btn-false" tweetid=tweet._id)
          div(class="ms-3 mb-3 mt-2 div-tweet-content")= tweet.content
          if tweet.image
            span(class="text-center") Flou
            div(class="div-img-flou")
              button(class="btn-img-more-flou") +
              button(class="btn-img-less-flou") -
            div(id="div-letter-image " class="m-3 img-in-pending")
              img(class="letter-image-validation" src=tweet.image)
          span(class="flex-fill ms-1 tweet-time" letteruptime= tweet.updatedAt, lettercreatetime= tweet.createdAt)

