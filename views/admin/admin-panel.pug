extends ../layout

block content
  script(src="/javascripts/tweets/tweet.js")
  script(src="/javascripts/users/user.js")
  script(src="/javascripts/socket-io/socket-display.js")
  div(id="admin-panel-container")
    H1(class="text-center") Administration
    div(id="admin-panel-info")
      div(class="admin-panel-info-nbr-user")
        strong user connecter
        br
        p(class="effet-3d" id="user-log-number")
      div(class="admin-panel-info-nbr-user") 
        strong user inscrit
        br
        p(class="effet-3d")= numberOfUsers
      div(class="admin-panel-info-nbr-user") 
        strong nombre de lettres
        br
        p(class="effet-3d")= numberOfLetters
    div(id="admin-content")
      div
        h3(class="text-center") Liste des utilisateurs
        div(id="admin-user-list-container")
          include admin-user-list.pug
      div
        h3(class="text-center") Liste des lettres
        div(class="d-flex flex-fill flex-column" id="admin-tweet-list-container")
          include letter-list.pug
