if tweets 
  each tweet in tweets
    div(class="card tweet-element")
      div(class="card-body d-flex flex-column")
       div(class="d-flex flex-row justify-content-center align-items-center")
        img(width="40" height="40" class="rounded-circle" src=tweet.author.avatar)
        span(class="flex-fill ms-1 fw-bold")= tweet.author.username
        if editable && tweet.author._id.toString() === currentUser._id.toString()
          div(class="d-flex flex-row justify-content-center")
            a(class="fa-solid fa-pen-to-square pe-2 text-success" href='/tweets/edit/' + tweet._id)
            i(class="fa-solid fa-trash-can text-danger pointer-cursor" tweetid=tweet._id)
      div(class="ms-3 mb-3")= tweet.content
      if new Date(tweet.updatedAt).getDate() === new Date(Date.now()).getDate()
        span(class="flex-fill ms-1 tweet-time")= new Date(tweet.updatedAt).getHours() + '`' + new Date(tweet.updatedAt).getMinutes()
      else 
        span(class="flex-fill ms-1 tweet-time")= new Date(tweet.updatedAt).getHours() + '`' + new Date(tweet.updatedAt).getMinutes() + ' ' + new Date(tweet.updatedAt).toLocaleDateString()
