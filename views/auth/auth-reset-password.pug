extends ../layout

block content 
  script(src="/javascripts/auth/auth-form.js") 
  div(class="d-flex flex-row content justify-content-center mx-auto")
      form(class="card w-50 mt-5" method="post" action=url )
        div(class="card-header") Reset password
        div(clas="card-body")
          div(class="form-group m-3")
            label Password 
            input(class="form-control" type="password" name="password")
          if errors
            ul(class="my-2")
              each error in errors
                li(class="text-danger")= error
          div(class="w-100 d-flex flex-row justify-content-between align-items-center")
            input(type="submit" value="Reset password" class="btn btn-primary d-block m-1 float-end") 