extends ../layout

block content 
  script(src="/javascripts/auth/auth-form.js")
  script.
    function onSubmit(token) {
      document.getElementById("form-auth").submit();
    }
  div(class="content-auth mx-auto")
      a(class="logo-auth mb-5" href="/letters")
        img(width="40" height="40" src="/images/whats-up-logo.png" alt="Whats-UP logo")
        span(class="logo-name-auth") Whats-UP
      form(class="card auth-form" method="post" action="/auth/signin" id="form-auth")
        div(class="card-header auth-header")
          a(class="auth-a-link active" href="/auth/signin/form") Connexion
          a(class="auth-a-link" href="/users/signup/form") Inscription  
        div(clas="card-body")
          div(class="form-group m-3")
            label(class="label-auth") Email :
            input(class="form-control" type="email" name="email")
          div(class="form-group m-3")
            label(class="label-auth") Password : 
            input(class="form-control" type="password" name="password")
            if error
            ul(class="my-2")
                li(class="auth-error")= error 
          div(class="w-100 d-flex flex-row justify-content-between align-items-center")
            div(id="forgot" class="text-hint ps-1 label-auth") mot de passe oubli√© ?
            input(type="submit" value="connexion" class="g-recaptcha btn btn-primary d-block m-1 float-end btn-login" data-sitekey="6Lei_BknAAAAAJ22WJ7rnXdUmV9wH4fKAo-uDh5J" data-callback="onSubmit" data-size="invisible") 