extends ../layout

block content 
  div(class="d-flex content-auth mx-auto")
      form(class="card auth-form" method="post" action="/users/signup" )
        div(class="card-header auth-header")
          a(class="auth-a-link" href="/auth/signin/form") Connexion
          a(class="auth-a-link active" href="/users/signup/form") Inscription  
        div(clas="card-body")
          div(class="form-group m-3")
            label Username 
            input(class="form-control" type="text" name="username")
          div(class="form-group m-3")
            label Email 
            input(class="form-control" type="text" name="email")
          div(class="form-group m-3")
            label Password 
            input(class="form-control" type="password" name="password")
          if errors
            ul(class="my-2")
              each error in errors
                li(class="text-danger")= error
          div(class="w-100")
            input(type="submit" value="valider" class="btn btn-primary d-block m-1 float-end") 